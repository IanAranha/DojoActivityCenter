@{
    ViewData["Title"] = "Home Page";
}

@model dojoactivitycenter.Models.RegisterUserModel
<h2>Register here</h2>
<form asp-controller="Home" asp-action="Register" method="post">
    
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"/>
    <span asp-validation-for="FirstName"></span><br>
    
    <label asp-for="LastName"></label>
    <input asp-for="LastName"/>
    <span asp-validation-for="LastName"></span><br>

    
    <label asp-for="Email"></label>
    <input asp-for="Email"/>
    <span asp-validation-for="Email"></span>
    <span>@TempData["Unique"]</span><br>
   

    <label asp-for="Password"></label>
    <input asp-for="Password"/>
    <span asp-validation-for="Password"></span><br>   
    
    <label asp-for="C_Password"></label>
    <input asp-for="C_Password"/>
    <span asp-validation-for="C_Password"></span><br>
    
    <button type="submit">REGISTER</button>
</form>

